{
	"compilerOptions": {
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es2015",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": ["dom", "es2015"],
		"outDir": "dist",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"~/*": ["src/*"]
		}
	},
	"include": ["src"]
}
